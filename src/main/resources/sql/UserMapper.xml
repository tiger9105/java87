  </resultMap>
  <!-- SQL : INSERT -->
  <insert   id="addUser"    parameterType="user" >
    INSERT
    INTO users( user_no , user_id , password , email, image_file) 
    VALUES   (seq_user_userno.NEXTVAL,  #{userId} ,  #{password} , #{email:VARCHAR} , 
             #{filepath:VARCHAR} )
   </insert>
   
    <update  id="updateUser" parameterType="user" >
      UPDATE users
      <set>
        IMAGE_FILE  = #{filepath} 
       </set>
      WHERE user_id = #{userId}
    </update>
   
