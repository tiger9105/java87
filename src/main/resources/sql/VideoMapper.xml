   <select id= "getTotalCount" resultType="int">
	    SELECT COUNT(*)
	    FROM video
   </select> 
   
   <delete id="deleteVideo" parameterType="int">
	   DELETE FROM video 
	   WHERE vid_no=#{videoNo}
   
   </delete>
   
    <update  id="updateHits" parameterType="video" >
      UPDATE video
      <set>
        vid_hits=#{hits}
       </set>
      WHERE vid_no = #{videoNo}
    </update>
 
</mapper>